<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_first_time_setup_navigation_buttons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/fragment_first_time_setup_navigation_button_yes"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_first_time_setup_navigation_buttons_height"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:theme="@style/SecondaryColorButton"
        android:text="@string/fragment_first_time_setup_sms_yes" />

    <Button
        android:id="@+id/fragment_first_time_setup_navigation_button_no"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_first_time_setup_navigation_buttons_height"
        android:layout_weight="1"
        android:text="@string/fragment_first_time_setup_sms_no" />

</LinearLayout>