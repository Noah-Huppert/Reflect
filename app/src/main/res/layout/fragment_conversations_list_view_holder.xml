<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_conversations_list_view_holder_item_height">

    <ImageView
        android:id="@+id/fragment_conversations_list_view_holder_avatar"
        android:layout_width="@dimen/fragment_conversations_list_view_holder_avatar_width"
        android:layout_height="@dimen/fragment_conversations_list_view_holder_avatar_height"
        android:layout_margin="@dimen/fragment_conversations_list_view_holder_avatar_padding"
        android:src="@drawable/circle"/>

    <TextView
        android:id="@+id/fragment_conversations_list_view_holder_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_conversations_list_view_holder_avatar_padding"
        android:layout_marginLeft="@dimen/fragment_conversations_list_view_holder_avatar_padding"
        android:layout_toRightOf="@+id/fragment_conversations_list_view_holder_avatar"
        android:textSize="@dimen/fragment_conversations_list_view_holder_contact_text_size"
        android:text="Contact Name"/>

    <TextView
        android:id="@+id/fragment_conversations_list_view_holder_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_conversations_list_view_holder_avatar_padding"
        android:layout_below="@+id/fragment_conversations_list_view_holder_contact_name"
        android:layout_toRightOf="@+id/fragment_conversations_list_view_holder_avatar"
        android:text="Snippet of the conversation"/>

    <TextView
        android:id="@+id/fragment_conversations_list_view_holder_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_conversations_list_view_holder_avatar_padding"
        android:layout_below="@+id/fragment_conversations_list_view_holder_snippet"
        android:layout_toRightOf="@+id/fragment_conversations_list_view_holder_avatar"
        android:text="Time"/>

</RelativeLayout>