    <!-- Pages -->
    <ViewFlipper
        android:id="@+id/fragment_first_time_setup_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_first_time_setup_page_indicator_2">

        <!-- SMS Setup -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_first_time_setup_sms_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/fragment_first_time_setup_sms_prompt"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_first_time_setup_navigation_buttons_height"
                    android:layout_weight="1"
                    style="@style/ButtonSecondaryColorTint"
                    android:textColor="@android:color/white"
                    android:text="@string/fragment_first_time_setup_sms_yes" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_first_time_setup_navigation_buttons_height"
                    android:layout_weight="1"
                    android:text="@string/fragment_first_time_setup_sms_no" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Google Account Setup -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Google Account Setup"/>

        </RelativeLayout>

        <!-- Jabber Setup -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Jabber Setup"/>

        </RelativeLayout>

    </ViewFlipper>

    <!-- Page Indicators -->
    <ImageView
        android:id="@+id/fragment_first_time_setup_page_indicator_1"
        android:layout_width="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_height="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/fragment_first_time_setup_page_indicator_2"
        android:layout_marginBottom="@dimen/fragment_first_time_setup_page_indicator_margin_bottom"
        android:src="@drawable/ic_brightness_1_white"/>

    <ImageView
        android:id="@+id/fragment_first_time_setup_page_indicator_2"
        android:layout_width="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_height="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fragment_first_time_setup_page_indicator_margin_bottom"
        android:layout_marginLeft="@dimen/fragment_first_time_setup_page_indicator_margin_side"
        android:layout_marginRight="@dimen/fragment_first_time_setup_page_indicator_margin_side"
        android:src="@drawable/ic_brightness_1_white" />

    <ImageView
        android:id="@+id/fragment_first_time_setup_page_indicator_3"
        android:layout_width="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_height="@dimen/fragment_first_time_setup_page_indicator_size"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/fragment_first_time_setup_page_indicator_2"
        android:layout_marginBottom="@dimen/fragment_first_time_setup_page_indicator_margin_bottom"
        android:src="@drawable/ic_brightness_1_white" />

</RelativeLayout>